{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2018"
        ],
        "outDir": "dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "emitDeclarationOnly": false,
        "module": "es2015",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/*.test.ts"
    ]
}